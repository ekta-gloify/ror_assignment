<h1 class="main-lib-heading">Library Details</h1>
<table>
    <style>
          table {
            border-collapse: collapse;
            margin-top:20px;
            text-align:center;
            margin-left: 20px;
          }
          td, th {
            border: 1px solid black;
            padding:20px 40px 10px 35px;
            
          }
          th{
            background-color:rgb(183, 191, 199);
          }
          
    </style>
    <thead>
        <tr>
            <th>Library Name</th>
            <th>Opening-Time</th>
            <th>Closing-Time</th>
            <th>No. Of Books</th>
            <th colspan="3">Show/Edit/Delete Library</th>
        </tr>
    </thead>
    <tbody>
         <% @libraries.each do |library| %>
          <tr>
            <td><%= library.l_name %></td>
            <td><%= library.opening_time %></td>
            <td><%= library.closing_time %></td>
            <td><%= library.books.size %></td>
            <td><h3><%= link_to "Show Library", library,style:  "text-decoration:none; border:1px; background-color:royalblue; padding:8px; color:white" %></h3> </td>
            <td><h3><%= link_to "Edit Library", edit_library_path(library), style: "text-decoration:none; border:1px; background-color:green; padding:8px; color:white" %></h3></td>
            <td><h3><%= link_to "Destroy" , library, method: :delete, data: { confirm: "Are you sure delete this library?"}, style: "text-decoration:none;border:1px; background-color:red; padding:8px; color:white" %></h3></td>
          </tr> 
        <% end %>
    </tbody>
</table>
<br/><br/>

<%= link_to "Add New Library", new_library_path, :class=>"add-new-lib" %>


