
<body class="login"></body>
<div class="login-form">
<h2 class="sign-in-heading">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email, :class=>"login-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Enter Email",:class=>"login-field" %>
  </div>

  <div class="login-label">
    <%= f.label :password,:class=>"login-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password",placeholder:"Enter Password",:class=>"login-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="check-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,:class=>"checkbox-css" %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Log in",:class=>"sign-in-btn" %>
  </div>
<% end %>
  <div class="account-btn">Don't have an account ?
    <%= render "devise/shared/links" %>
  </div>
</div>

