
<body class="user"></body>

  <div class="author-form">
    <h1 class="author-details">Author Details!!!!</h1>

  <table>
    <style>
      table{
        border-collapse: collapse;
        margin-top:20px;
        text-align:center;
        margin-left: 20px;
          }
      td, th {
        border: 1px solid grey;
        padding:15px 25px 15px 25px;  
          }
          th{
            background-color:rgb(183, 191, 199);
          }
    </style>
    <thead> 
      <tr>
        <th>Author Email</th>
        <th>Author Name</th>
        <th>Author Birth-Date</th>
        <th>Number of Books</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.a_name %></td>
          <td><%= user.date_of_birth %></td>
          <td><%= user.books.size %></td>
          <td><%= link_to 'Show', user ,style:  "text-decoration:none; border:1px; background-color:green; padding:8px; color:white"%></td>
          <td><%= link_to 'Edit', edit_user_path(user),style:  "text-decoration:none; border:1px; background-color:royalblue; padding:8px; color:white" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure delete this user?' } ,style:  "text-decoration:none; border:1px; background-color:red; padding:8px; color:white"%></td>
        </tr>  
      <% end %>
    </tbody>
  </table>
</div>