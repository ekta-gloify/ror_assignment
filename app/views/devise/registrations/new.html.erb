<body class="sign-up"></body>
<div class="form-css">
  <h2 class="sign-up-heading">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email ,:class=>"label-css"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter Email", :class=>"field-css" %>
  </div>


  <div class="field">
    <%= f.label :a_name,:class=>"label-css" %><br />
    <%= f.text_field :a_name, autocomplete: "name", placeholder:"Enter Name", :class=>"field-css" %>
  </div>

  <div class="field">
    <%= f.label :date_of_birth,:class=>"label-css" %><br />
    <%= f.date_field :date_of_birth, autocomplete: "date_of_birth", placeholder:"Enter Date-of-birth", :class=>"field-css" %>
  </div>

  <div class="field">
    <%= f.label :password ,:class=>"label-css"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Enter Password", :class=>"field-css" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation ,:class=>"label-css"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Enter Re-password", :class=>"field-css" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",:class=>"sign-up-btn" %>
  </div>
<% end %>

<div class="login-btn-css">Already registered ?<%= render "devise/shared/links" %></div>
</div>